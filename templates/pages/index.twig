{% extends "shell.twig" %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block content %}
    <h1 class="ui header">{{ pageTitle }}</h1>

    <div class="ui four column grid">
        {% for item in items %}
            <div class="column">
                <div
                        data-vue-component="CocktailCard"
                        item="{{ item|json_encode|raw|escape }}"
                ></div>
            </div>
        {% endfor %}
    </div>
{% endblock %}